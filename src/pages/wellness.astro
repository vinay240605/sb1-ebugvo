---
import Layout from '../layouts/Layout.astro';

const wellnessPosts = [
  {
    title: "The Science of Meditation",
    image: "https://images.unsplash.com/photo-1545205597-3d9d02c29597?auto=format&fit=crop&q=80",
    excerpt: "Discover how daily meditation can transform your mental health and boost productivity.",
    date: "April 15, 2024",
    readTime: "8 min read"
  },
  {
    title: "Yoga for Beginners",
    image: "https://images.unsplash.com/photo-1603988363607-e1e4a66962c6?auto=format&fit=crop&q=80",
    excerpt: "Start your yoga journey with these simple yet effective poses for mind-body balance.",
    date: "April 14, 2024",
    readTime: "10 min read"
  },
  {
    title: "Nutrition Essentials",
    image: "https://images.unsplash.com/photo-1490645935967-10de6ba17061?auto=format&fit=crop&q=80",
    excerpt: "Learn about the fundamental principles of maintaining a balanced and healthy diet.",
    date: "April 13, 2024",
    readTime: "12 min read"
  },
  {
    title: "Sleep Optimization Guide",
    image: "https://images.unsplash.com/photo-1541781774459-bb2af2f05b55?auto=format&fit=crop&q=80",
    excerpt: "Master the art of quality sleep with science-backed techniques and habits.",
    date: "April 12, 2024",
    readTime: "9 min read"
  }
];
---

<Layout title="Wellness">
  <main class="max-w-6xl mx-auto px-4 py-24">
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold text-gray-900 mb-6">Wellness & Health</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">Discover holistic approaches to health, mindfulness practices, and expert tips for maintaining balance in your daily life.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      {wellnessPosts.map(post => (
        <article class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
          <div class="aspect-[16/9] overflow-hidden">
            <img 
              src={post.image} 
              alt={post.title}
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-8">
            <div class="flex items-center gap-4 text-sm text-gray-500 mb-4">
              <time>{post.date}</time>
              <span>â€¢</span>
              <span>{post.readTime}</span>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">{post.title}</h2>
            <p class="text-gray-600 mb-6">{post.excerpt}</p>
            <a href="#" class="inline-flex items-center text-rose-600 hover:text-rose-700">
              Read More 
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>

    <section class="mt-20 bg-rose-50 rounded-3xl p-12">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Wellness Resources</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white p-6 rounded-xl">
            <div class="text-rose-600 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Wellness Guides</h3>
            <p class="text-gray-600">Comprehensive guides on meditation, yoga, and mindfulness</p>
          </div>
          <div class="bg-white p-6 rounded-xl">
            <div class="text-rose-600 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Expert Tips</h3>
            <p class="text-gray-600">Professional advice on health, nutrition, and fitness</p>
          </div>
          <div class="bg-white p-6 rounded-xl">
            <div class="text-rose-600 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Video Content</h3>
            <p class="text-gray-600">Guided meditation and workout videos</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>