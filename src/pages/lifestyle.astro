---

<Layout title="Lifestyle">
  <main class="max-w-6xl mx-auto px-4 py-24">
    <div class="text-center mb-16">
      <h1 class="text-5xl font-bold text-gray-900 mb-6">Modern Lifestyle</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">Discover tips and inspiration for living a balanced, fulfilling life in today's fast-paced world.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Latest Articles</h2>
        <div class="space-y-12">
          {lifestylePosts.map(post => (
            <article class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
              <div class="md:flex">
                <div class="md:w-2/5">
                  <img 
                    src={post.image} 
                    alt={post.title}
                    class="w-full h-full object-cover"
                  />
                </div>
                <div class="md:w-3/5 p-8">
                  <div class="flex items-center gap-2 mb-4">
                    <span class="px-3 py-1 bg-rose-100 text-rose-600 rounded-full text-sm">{post.category}</span>
                    <time class="text-sm text-gray-500">{post.date}</time>
                  </div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-4">{post.title}</h3>
                  <p class="text-gray-600 mb-6">{post.excerpt}</p>
                  <a href="#" class="text-rose-600 hover:text-rose-700 font-medium">
                    Read More ‚Üí
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>

      <div class="lg:col-span-1">
        <div class="bg-gray-50 rounded-2xl p-8 sticky top-24">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Categories</h2>
          <div class="space-y-4">
            {categories.map(category => (
              <a href="#" class="flex items-center justify-between p-4 bg-white rounded-xl hover:shadow-md transition-shadow">
                <div class="flex items-center gap-3">
                  <span class="text-2xl">{category.icon}</span>
                  <span class="font-medium text-gray-900">{category.name}</span>
                </div>
                <span class="text-sm text-gray-500">{category.count} articles</span>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>